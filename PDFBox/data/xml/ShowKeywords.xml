<?xml version="1.0" encoding="UTF-8"?>
<!--    @author Patrick
        XML to display extracted keywords of PDFs
        -->

<frame name="showKeyword" id="showKeyword" size="300,250" title="Keywords">
    <panel layout="GridBagLayout">
        
        <!--Describing Label-->
        <label  id="foundKeywords"
                text="Gefundene Schlüsselwörter">
                
            <gridbagconstraints 
                gridx="0" gridy="0" 
                gridwidth="0" gridheight="2" 
                weightx="0.0" weighty="0.0"
                anchor="GridBagConstraints.FIRST_LINE_START" 
                fill="GridBagConstraints.NONE"
                insets="5,5,10,5" 
                ipadx="0" ipady="0"/>
        </label>
        
        <!--Scrollpane for showing the searched PDFs-->
        <scrollpane id="foundkeywords" background="white" 
                    VerticalScrollBarPolicy="VERTICAL_SCROLLBAR_AS_NEEDED" 
                    HorizontalScrollBarPolicy = "HORIZONTAL_SCROLLBAR_AS_NEEDED" >
            <list id="keywordList">
            </list>
            
            <gridbagconstraints  
                gridx="0" gridy="2" 
                gridwidth="0" gridheight="1" 
                weightx="0.8" weighty="0.8"
                anchor="GridBagConstraints.LINE_START" 
                fill="GridBagConstraints.BOTH"
                insets="5,5,5,5" 
                ipadx="0" ipady="5"/>
            
       </scrollpane>
        
        
    </panel>






</frame>